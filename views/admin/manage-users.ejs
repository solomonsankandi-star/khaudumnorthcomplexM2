<%- include('../partials/header') %>

<div class="admin-container container">
    <div class="admin-header">
        <h1 class="page-title">Manage Admin Users</h1>
        <a href="/admin/users/add" class="btn btn-primary">Add New User</a>
    </div>
    
    <p>This section allows you to view all registered admin users and their roles.</p>

    <div class="admin-table-wrapper">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <%= user.username %> 
                                <% if (user.isProtected) { %>
                                    <span style="color: var(--primary-green); font-weight: bold;">(Master)</span>
                                <% } %>
                            </td>
                            <td><strong><%= user.role %></strong></td>
                            <td>
                                <a href="/admin/users/edit/<%= user._id %>" class="btn-action edit">Edit</a>
                                
                                <!-- MODIFIED LOGIC: Only show delete button if user is NOT protected -->
                                <% if (!user.isProtected) { %>
                                    <a href="/admin/users/delete/<%= user._id %>" class="btn-action delete" onclick="return confirm('Are you sure you want to delete this user? This cannot be undone.');">Delete</a>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No other users found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>
